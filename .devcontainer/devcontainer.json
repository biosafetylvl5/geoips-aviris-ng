{
    "name": "geoips-avris-ng Devcontainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "pip install -e .[all] && pip install numpy==1.26.4 gdal[numpy]==3.6.2 --no-build-isolation --no-cache-dir --force-reinstall",
    "remoteEnv": {
        "GEOIPS_TESTDATA_DIR": "/workspaces/testdata",
        "GEOIPS_PACKAGES_DIR": "/workspaces",
        "GEOIPS_OUTDIRS": "/workspaces/avris-ng/geoips-out"
    },
    "mounts": [
        "source=${localWorkspaceFolder}/../aviris-ng-data,target=/data,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh/,target=/home/geoips_user/.ssh,type=bind",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_vscode,target=/home/geoips_user/.bash_aliases,type=bind,readonly",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.pokemon_vscode,target=/home/geoips_user/.pokemon,type=bind,readonly",
	],
    "customizations": {
        "vscode": {
            "extensions": [
                "lextudio.restructuredtext",
                "ms-python.python",
                "ms-python.flake8",
                "tamasfe.even-better-toml",
                "streetsidesoftware.code-spell-checker",
                "ms-python.black-formatter",
                "ms-azuretools.vscode-docker",
                "ms-python.isort",
                "charliermarsh.ruff",
                "matangover.mypy"
            ],
            "settings": {
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.mypyEnabled": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.ruff": true
                },
                "python.testing.pytestEnabled": true,
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                "ruff.enable": true,
                "ruff.format.enable": true,
                "ruff.organizeImports": false
            }
        }
    }
}